@{
    ViewBag.Title = "add_Customer";
}
<head>
</head>
<body>
    <h2 style="text-align:center">Add Customer</h2>
    <br />
    <form>
        <fieldset>
            <div class="form-group">
                <label for="name">Nama:</label>
                <input type="text" class="form-control" id="name">
            </div>
            <div class="form-group">
                <label for="address">Alamat:</label>
                <input type="text" class="form-control" id="address">
            </div>
            <div class="form-group">
                <label for="email">E-mail:</label>
                <input type="email" class="form-control" id="email"> 
            </div>
            <div class="form-group">
                <label for="gender">Gender:</label>
                <input type="text" class="form-control" id="gender">
            </div>
            <div class="form-group">
                <label for="born">Tanggal Lahir:</label>
                <input type="date" class="form-control" id="tanggal_lahir" name="input" placeholder="DD-MM-YYYY" required
                       pattern="(?:30))|(?:(?:0\[13578\]|1\[02\])-31))-(?:0\[1-9\]|1\[0-9\]|2\[0-9\])|(?:(?!02)(?:0\[1-9\]|1\[0-2\])-(?:19|20)\[0-9\]{2}-(?:(?:0\[1-9\]|1\[0-2\])"
                       title="Enter a date in this format YYYY-MM-DD" />
            </div>

            <button type="button" class="btn btn-default" onclick="create()">Submit</button>
        </fieldset>
    </form>
</body>

<script>

    function create() {
        var name = $('#name').val();
        var addr = $('#address').val();
        var email = $('#email').val();
        var gender = $('#gender').val();
        var lahir = $('#tanggal_lahir').val();

        location.href = '@Url.Action("Insert_Customer", "Master")?name=' + name + '&addr=' + addr + '&email=' + email + '&gender=' + gender + '&tgl_lahir=' + lahir;
    }

</script>
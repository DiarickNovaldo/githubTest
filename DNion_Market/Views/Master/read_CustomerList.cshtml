@{ 
    Layout = "~/Views/Shared/kosongan.cshtml";
}
    <table class="table">
        <thead >
            <tr>
                <th scope="col">Customer ID</th>
                <th scope="col">Name</th>
                <th scope="col">E-mail</th>
                <th scope="col">Address</th>
                <th scope="col">Gender</th>
                <th scope="col">Born Date</th>
                <th scope="col" style="text-align:center; width:150px">Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in ViewBag.cust)
            {
            <tr>
                <td>@item.id</td>
                <td>@item.name</td>
                <td>@item.email</td>
                <td>@item.address</td>
                <td>@item.gender</td>
                <td>@item.tanggal_lahir</td>
                <td>
                    <button onclick="updateFunction(@item.id)" style="color:black">Update</button>
                    <button onclick="deleteFunction(@item.id)" style="color:black">Delete</button>
                </td>
            </tr>
            }
        </tbody>
    </table>

    <script>
        function updateFunction(id) {
            var win = window.open('@Url.Action("edit_Customer","Master")?id=' + id);
        }
        function deleteFunction(id) {

            if (window.confirm("Are you sure?")) {
                location.href = '@Url.Action("delete_Customer","Master")?id=' + id;
            }
        }
    </script>
